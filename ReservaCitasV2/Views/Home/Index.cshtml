@{
    ViewData["Title"] = "login";
}

<style>
    /* Estilos CSS */
    body {
        background-color: #f8f9fa;
    }

    .card {
        border: none;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #007bff;
        color: #fff;
        border-radius: 20px 20px 0 0;
        border-bottom: none;
    }

    .card-body {
        padding: 30px;
    }

    .form-group {
        margin-bottom: 30px;
    }

    label {
        font-weight: bold;
    }

    input[type="number"],
    input[type="password"] {
        border: 2px solid #ced4da;
        border-radius: 10px;
        padding: 10px;
        width: 100%;
    }

    .input-group {
        position: relative;
        width: 100%;
    }

    .show-password {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
    }

    .btn-primary {
        background-color: #007bff;
        border: 2px solid #007bff;
        border-radius: 10px;
        padding: 10px 30px;
        font-weight: bold;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .modal-content {
        border-radius: 20px;
    }

    .modal-header {
        border-bottom: none;
    }

    .modal-footer {
        border-top: none;
    }

    .modal-body {
        padding: 20px;
    }
</style>

<div class="container mt-5"">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card" style="background-color:#d4eafc">
                <div class="card-header">
                    <h3 class="text-center">Iniciar sesión</h3>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="dni">DNI</label>
                        <input type="number" class="form-control" id="dni">
                    </div>
                    <div class="form-group">
                        <label for="password">Contraseña</label>
                        <div class="input-group">
                            <input type="password" class="form-control" id="password">
                            <div class="show-password" onclick="togglePasswordVisibility()">
                                <i class="bi bi-eye"></i>
                            </div>
                        </div>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary btn-block" onclick="login();">Iniciar sesión</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="exampleModalLabel">Ocurrió un error</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="mensajeError"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>

        function login() {
            let dniValue = $("#dni").val();
            let passValue = $("#password").val();

            if (dniValue == "" || passValue == "") {
                $("#mensajeError").text("Complete los datos solicitados");

                $("#errorModal").modal("show");

                return;
            }

            $.ajax({
                url: '@Url.Action("Login", "Home")',
                type: 'POST',
                contentType: "application/json",
                data: JSON.stringify({
                    Usuario: dniValue,
                    Pass: passValue
                }),
                success: function (result) {
                    console.log(result);
                    if (result.estado == true) {
                        window.location.href = '@Url.Action("Home", "Home")';
                    }
                    else {
                        $("#mensajeError").text(result.mensaje);

                        $("#errorModal").modal("show");
                    }
                },
                error: function (xhr, status, error) {
                    // Manejar el error si es necesario
                    console.error("Error al llamar a MiMetodo");
                }
            });
        }

        function togglePasswordVisibility() {
            var passwordInput = document.getElementById("password");
            var eyeIcon = document.querySelector(".show-password i");
            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                eyeIcon.classList.remove("bi-eye");
                eyeIcon.classList.add("bi-eye-slash");
            } else {
                passwordInput.type = "password";
                eyeIcon.classList.remove("bi-eye-slash");
                eyeIcon.classList.add("bi-eye");
            }
        }

    </script>
}

@{
    ViewData["Title"] = "login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    Inicia sesion
                </div>
                <div class="card-body">
                    <div class="form-group mb-3">
                        <label for="dni">DNI</label>
                        <input type="number" class="form-control" id="dni">
                    </div>
                    <div class="form-group mb-3">
                        <label for="password">Contraseña</label>
                        <input type="password" class="form-control" id="password">
                    </div>
                    <button class="btn btn-primary" onclick="login();">Loguarse</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal" tabindex="-1" id="errorModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ocurrio un error</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="mensajeError"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>

        function login() {
            let dniValue = $("#dni").val();
            let passValue = $("#password").val();

            if (dniValue == "" || passValue == "") {
                $("#mensajeError").text("Complete los datos solicitados");

                $("#errorModal").modal("show");

                return;
            }

            $.ajax({
                url: '@Url.Action("Login", "Home")',
                type: 'POST',
                contentType: "application/json",
                data: JSON.stringify({
                    Usuario: dniValue,
                    Pass: passValue
                }),
                success: function (result) {
                    console.log(result);
                    if (result.estado == true) {
                        window.location.href = '@Url.Action("Home", "Home")';
                    }
                    else {
                        $("#mensajeError").text(result.mensaje);

                        $("#errorModal").modal("show");
                    }
                },
                error: function (xhr, status, error) {
                    // Manejar el error si es necesario
                    console.error("Error al llamar a MiMetodo");
                }
            });



        }

    </script>
}